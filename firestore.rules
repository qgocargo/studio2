rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check user role
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow list: if request.auth != null && getRole(request.auth.uid) == 'admin';
    }

    match /crew/{crewId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (getRole(request.auth.uid) == 'admin' || getRole(request.auth.uid) == 'supervisor');
    }

    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && getRole(request.auth.uid) == 'admin';
    }

    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (getRole(request.auth.uid) == 'admin' || getRole(request.auth.uid) == 'supervisor');
    }
  }
}
