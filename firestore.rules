rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isSupervisor() {
      return isSignedIn() && (getRole() == 'supervisor' || isAdmin());
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow anyone to create their own user document upon registration
      allow create: if isOwner(userId);
      
      // Allow authenticated users to read their own profile, and admins to read any profile
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Allow users to update their own profile, and admins to update any
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Rules for the 'crew' collection
    match /crew/{crewId} {
       // Supervisors and Admins can manage crew
      allow read: if isSupervisor();
      allow write: if isSupervisor();
    }
    
    // Rules for the 'inventory' collection
    match /inventory/{itemId} {
      // Admins can manage inventory
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Rules for the 'jobs' collection
    match /jobs/{jobId} {
      // Supervisors and Admins can manage jobs
      allow read: if isSupervisor();
      allow write: if isSupervisor();
    }
  }
}
