rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can create their own user document if the uid matches.
      allow create: if request.auth.uid == userId;
      // A user can read, or update their own user document.
      allow read, update: if request.auth.uid == userId;
    }
    match /users/{document=**} {
      // Allow reading the users collection for auth-related checks.
      // This is needed to check if a user is the first user during registration.
      allow list: if request.auth != null;
    }
  }
}
